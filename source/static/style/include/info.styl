#layer-info
  z-index 20
  display block
  position absolute
  left 0
  top 0
  pointer-events none
  font-size 0
  max-height 100%
  overflow hidden

  span
    display inline-block
    height 24px
    width auto
    line-height @height
    font-size 12px
    color #333
    background-color gold
    border-left 4px solid @background-color - 10%
    border-radius 0 2px 2px 0
    padding 0 8px
    margin 8px 0 0
    animation animation-info 10s ease
    box-shadow 0 2px 2px rgba(#000, 0.5)