@require '../../core/style/include/rule'

#footer
  margin 0
#area-tool-fixed
  display none

#mainer
  $color = #2166b4
  background-color $color
  background-image linear-gradient(30deg, $color + 50%, $color)
  color #fff
  min-height 600px

#area-main-error
  width 600px
  margin 0 auto
  padding-top 10%
  line-height 2
  text-align left
  cursor default
  user-select none

  .emotion
    font-size 120px

  .main
    font-size 20px

  .sub
    font-size 12px
    margin-top 60px

  a
    color #fff
    margin 0 5px
    text-decoration underline
    cursor pointer